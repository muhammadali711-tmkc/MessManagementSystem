@model MessManagementSystem.Models.Payment

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Payment Successful</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height: 100vh;">

    <div class="card shadow p-5 text-center" style="max-width: 500px; width: 100%;">
        <div class="mb-4">
            <div style="font-size: 80px; color: #28a745;">&#10004;</div>
            <h2 class="text-success">Payment Successful!</h2>
        </div>

        <p class="lead">Thank you! Your bill has been paid.</p>

        <div class="alert alert-secondary text-start">
            <strong>Transaction ID:</strong> @Model.TransactionToken <br />
            <strong>Amount Paid:</strong> Rs. @Model.AmountPaid <br />
            <strong>Date:</strong> @Model.PaymentDate
        </div>

        <a href="/Teacher/Dashboard" class="btn btn-primary w-100 mt-3">Back to Dashboard</a>
    </div>

</body>
</html>