@model IEnumerable<MessManagementSystem.Models.Bill>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>My Bills</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light p-5">

    <div class="container bg-white p-4 shadow rounded" style="max-width: 900px;">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>💰 My Monthly Bills</h2>
            <a href="/Teacher/Dashboard" class="btn btn-secondary">Back to Dashboard</a>
        </div>

        <table class="table table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Month</th>
                    <th>Breakdown</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var bill in Model)
                {
                    <tr>
                        <td class="fw-bold">@bill.BillMonth / @bill.BillYear</td>
                        <td>
                            <small>Food: @bill.FoodAmount</small><br />
                            <small>Water: @bill.WaterAmount</small><br />
                            <small>Arrears: @bill.PreviousArrears</small>
                        </td>
                        <td class="fw-bold text-primary">Rs. @bill.TotalAmount</td>
                        <td>
                            @if (bill.IsPaid == true)
                            {
                                <span class="badge bg-success">PAID</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">UNPAID</span>
                            }
                        </td>
                        <td>
                            @if (bill.IsPaid == false)
                            {
                                <a href="/Payment/JazzCashGateway?billId=@bill.BillId"
                                   class="btn btn-primary btn-sm w-100">
                                    Pay with Card (Stripe)
                                </a>
                            }
                            else
                            {
                                <span class="text-muted text-center d-block">Completed</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">No bills found.</div>
        }
    </div>

</body>
</html>