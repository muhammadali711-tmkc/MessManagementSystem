@model MessManagementSystem.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Edit Teacher</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5" style="max-width: 600px;">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h4>✏️ Edit Teacher Details</h4>
            </div>
            <div class="card-body">
                <form method="post" action="/Admin/EditTeacher">
                    <input type="hidden" name="UserId" value="@Model.UserId" />

                    <div class="mb-3">
                        <label>Full Name</label>
                        <input type="text" name="FullName" class="form-control" value="@Model.FullName" required />
                    </div>

                    <div class="mb-3">
                        <label>Email Address</label>
                        <input type="email" name="Email" class="form-control" value="@Model.Email" required />
                    </div>

                    <div class="mb-3">
                        <label>Current Role</label>
                        <input type="text" class="form-control" value="@Model.Role" disabled />
                    </div>

                    <button type="submit" class="btn btn-warning w-100">Save Changes</button>
                    <a href="/Admin/ManageTeachers" class="btn btn-link w-100 mt-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>

</body>
</html>