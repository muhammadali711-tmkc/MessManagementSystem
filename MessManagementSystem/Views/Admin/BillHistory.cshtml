@model IEnumerable<MessManagementSystem.Models.Bill>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Bill History</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>📜 Bill History</h2>
            <a href="/Admin/GenerateBills" class="btn btn-secondary">Back</a>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Teacher</th>
                            <th>Month/Year</th>
                            <th>Food Cost</th>
                            <th>Water</th>
                            <th>Arrears</th>
                            <th>Total</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bill in Model)
                        {
                            <tr>
                                <td>@bill.User.FullName</td>
                                <td>@bill.BillMonth / @bill.BillYear</td>
                                <td>@bill.FoodAmount</td>
                                <td>@bill.WaterAmount</td>
                                <td>@bill.PreviousArrears</td>
                                <td class="fw-bold">@bill.TotalAmount</td>
                                <td>
                                    @if (bill.IsPaid == true)
                                    {
                                        <span class="badge bg-success">PAID</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">UNPAID</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center">No bills found.</div>
                }
            </div>
        </div>
    </div>

</body>
</html>