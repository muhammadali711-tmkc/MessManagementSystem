@model IEnumerable<MessManagementSystem.Models.User>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Manage Teachers</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>👨‍🏫 Manage Teachers</h2>
            <div>
                <a href="/Admin/AddTeacher" class="btn btn-success">+ Add New Teacher</a>
                <a href="/Admin/Dashboard" class="btn btn-secondary">Back to Dashboard</a>
            </div>
        </div>

        <div class="card shadow">
            <div class="card-body">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Current Balance</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model)
                        {
                            <tr>
                                <td>@teacher.FullName</td>
                                <td>@teacher.Email</td>
                                <td class="@(teacher.CurrentBalance < 0 ? "text-danger fw-bold" : "text-success")">
                                    @teacher.CurrentBalance
                                </td>
                                <td>
                                    @if (teacher.IsFirstLogin == true)
                                    {
                                        <span class="badge bg-warning text-dark">New User</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                </td>
                                <td>
                                    <a href="/Admin/EditTeacher?id=@teacher.UserId" class="btn btn-sm btn-warning">Edit</a>

                                    <a href="/Admin/DeleteTeacher?id=@teacher.UserId"
                                       class="btn btn-sm btn-danger"
                                       onclick="return confirm('Are you sure? This will delete ALL attendance and bill history for this teacher!');">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="alert alert-info text-center">No teachers found. Click "Add New Teacher" to create one.</div>
                }
            </div>
        </div>
    </div>

</body>
</html>