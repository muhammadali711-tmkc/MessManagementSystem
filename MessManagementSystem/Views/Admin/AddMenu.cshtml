@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Add Menu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5" style="max-width: 600px;">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4>Add Daily Menu</h4>
            </div>
            <div class="card-body">

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form method="post" action="/Admin/AddMenu">
                    <div class="mb-3">
                        <label>Select Date</label>
                        <input type="date" name="MenuDate" class="form-control" required />
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label>Breakfast</label>
                            <input type="text" name="BreakfastItem" class="form-control" placeholder="e.g. Paratha" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label>Lunch</label>
                            <input type="text" name="LunchItem" class="form-control" placeholder="e.g. Daal Chawal" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label>Dinner</label>
                            <input type="text" name="DinnerItem" class="form-control" placeholder="e.g. Chicken Karahi" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="fw-bold">Total Daily Cost (PKR)</label>
                        <input type="number" name="DailyRate" class="form-control" placeholder="e.g. 350" required />
                        <small class="text-muted">This amount will be charged to teachers who attend today.</small>
                    </div>

                    <button type="submit" class="btn btn-success w-100">Save Menu</button>
                    <a href="/Admin/ManageMenu" class="btn btn-link w-100 mt-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>

</body>
</html>