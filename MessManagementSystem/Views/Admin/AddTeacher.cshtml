@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Add Teacher</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container mt-5" style="max-width: 600px;">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4>Register New Teacher</h4>
            </div>
            <div class="card-body">

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <form method="post" action="/Admin/AddTeacher">
                    <div class="mb-3">
                        <label>Full Name</label>
                        <input type="text" name="FullName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Email Address</label>
                        <input type="email" name="Email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Default Password</label>
                        <input type="text" name="Password" class="form-control" value="teacher123" required />
                        <small class="text-muted">User will be forced to change this upon first login.</small>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Create Account</button>
                    <a href="/Admin/ManageTeachers" class="btn btn-link w-100 mt-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>

</body>
</html>